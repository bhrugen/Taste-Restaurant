@page
@model TasteRestaurant.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}


<br />
<h2>Menu Item Details</h2>
<hr />
<form method="post">
    <div class="form-border row">
        <div class="col-sm-8">

            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.Name" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="CartObj.MenuItem.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.Descrption" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <textarea style="height:150px;" disabled asp-for="CartObj.MenuItem.Descrption" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.Price" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="CartObj.MenuItem.Price" disabled class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.Spicyness" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <select asp-for="CartObj.MenuItem.Spicyness" disabled asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="CartObj.MenuItem.CategoryType.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.MenuItem.FoodTypeId" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="CartObj.MenuItem.FoodType.Name" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">
                    <label asp-for="CartObj.Count" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="CartObj.Count" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-4">

                </div>
                <div class="col-sm-8">
                    <button type="submit" value="Add To Cart" class="btn btn-sm btn-primary form-control">Add To Cart</button>
                </div>
            </div>
        </div>
        <div class="col-sm-3 col-sm-offset-1">
            <img src="@Model.CartObj.MenuItem.Image" width="100%" style="border-radius:5px;border :1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group row col-sm-12">
            <a asp-page="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
    <input asp-for="CartObj.MenuItemId" hidden />
</form>